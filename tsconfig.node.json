{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "eslint.config.ts",
    "src/specs/request-handlers.ts",
    "vite.config.ts",
    "vitest.config.ts",
    "vitest.setup.ts",
    "test/**/*.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"],
      "test/*": ["./test/*"]
    }
  }
}
